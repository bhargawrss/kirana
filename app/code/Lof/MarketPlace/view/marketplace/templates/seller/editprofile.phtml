					jQuery("#parent_store_id").attr('disabled','true');
				}
				else{
					jQuery("#parent_store_id").removeAttr('disabled');
				}
			});
			// Update opening and closeing time on 24*7 Shop selection.
			jQuery("#24by7_shop").change(function(){
				if(jQuery(this).val() == 'Yes'){
					jQuery("#opening_time").attr('disabled','true');
					jQuery("#closeing_time").attr('disabled','true');
					jQuery("#opening_time").val();
					jQuery("#closeing_time").val();
				}
				else{
					jQuery("#opening_time").removeAttr('disabled');
					jQuery("#closeing_time").removeAttr('disabled');
				}
			});
			// On address/pincode change, update lat and lng of address.
			jQuery("#postcode").change(function(){
				var address = jQuery('#address').val();
				var city = jQuery('#city').val();
				var state = jQuery('#region').val();
				var country = jQuery('#country').val();
				var postcode = jQuery('#postcode').val();
    			var param = 'address='+address+'&city='+city+'&state='+state+'&country='+country+'&pincode='+postcode;
				jQuery.ajax({
                                showLoader: true,
                                url: "<?php  echo $block->getBaseUrl(); ?>geolocation",
                                data: param,
                                type: "POST",
                                dataType: 'json',
							}).done(function (data) {
                                if(data.status == 'success')
								{
									jQuery('#geo_lat').val(data.geo.lat);
									jQuery('#geo_lng').val(data.geo.lng);
								}
								else
								{
									console.log("Geolocatiopn failed. :"+data.status+":"+ data.message);
								}
							}).fail(function (jqXhr) {
								console.log(jqXhr.responseText);
                    		});
			});
		});//
